{
  "name": "flash-type",
  "version": "1.0.0",
  "description": "Global hotkey voice-to-text utility powered by Groq Whisper + Llama models.",
  "author": "Flash Type",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder",
    "test": "node --test tests/**/*.test.js",
    "clear-key": "node scripts/clear-key.js"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "object-assign": "^4.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "optionalDependencies": {
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^25.0.5",
    "nock": "^14.0.4"
  },
  "build": {
    "appId": "com.example.flashtype",
    "productName": "Flash Type",
    "files": [
      "main.js",
      "preload.js",
      "recorder.html",
      "recorder.js",
      "settings.html",
      "settings.js",
      "settings.css",
      "groq-client.js",
      "paste-util.js",
      "settings-store.js",
      "scripts/**/*",
      "assets/**/*",
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/keytar/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Flash Type",
      "license": "LICENSE"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  }
}
